{
  "compilerOptions": {
    "noEmitOnError": true,
    "allowJs": false,
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "noImplicitAny": false,
    "outDir": ".elements/dist",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "inlineSources": false,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "ignore": [
    "node_modules"
  ]
}
